<% if !@resume.errors.empty? %>
  <div class="alert alert-error">

    <ul>
      <% @resume.errors.full_message.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>

  </div>
<% end %>

<div class="well">
  <%= form_for @resume, html: { multipart: true } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :attachment %>
      <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>

</div>